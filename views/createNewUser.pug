extends base.pug
block content
  .container
    h2.text-white Create new user
    form(method="POST" action="/createNewUser")
      if error 
        h3 #{message}
      label#login(for = "username") Username:
      input.form-control(type = "text", name = "username")
      br
      label#login(for = "password") Password:
      input.form-control(type = "password", name = "password")
      br
      button.btn.btn-dark.point-cloud-button(type = "submit", name = "submit" style='margin-left:0pt;') Submit
      br
    a(href='/') 
      button.btn.btn-dark.point-cloud-button(style='margin-left:0pt;') Back
