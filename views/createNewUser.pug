extends base.pug
block content
  .container
    form(method="POST" action="/createNewUser")
      if error 
        h3 #{message}
      label(for = "username") Username:
      input(type = "text", name = "username")
      br
      label(for = "password") Password:
      input(type = "password", name = "password")
      br
      input(type = "submit", name = "submit", value = "submit")
