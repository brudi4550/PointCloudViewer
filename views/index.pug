<!DOCTYPE html>
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title=title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat")
    link(rel="stylesheet" href="css/styles.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css")
  body
    form(id='uploadForm')
      input(type='file', name='fileToUpload' id='fileToUpload' required)
      br
      input(type='submit' id='beginUpload')
    nav.navbar.navbar-dark.bg-dark.navbar-expand-md
      div.container-fluid
        a.navbar-brand.abs#navbar-brand(href='/') PointCloudViewer
        i.bi.bi-question-circle.nav-item.ms-auto.clickable#modal-button
    .container
      a(href='/upload') 
        button.btn.btn-dark.point-cloud-button Upload Point Cloud
      button.btn.btn-dark.point-cloud-button Connect to S3 Bucket containing point clouds
      a(href='/fileconvert')
        button.btn.btn-dark.convert-file-button Convert File
      .row
        h2.text-white Table  1
        table.table.table-dark.table-bordered.table-hover
          tr
            th Data
            th Data 
            th Link to point cloud
          tr
          each cloud in clouds
            tr
              td #{cloud.name} 
              td Some Data 
              td #{cloud.url}
      .row
        h2.text-white Table 2
        table.table.table-dark.table-bordered.table-hover
          tr
            th Data
            th Data 
            th Link to point cloud
          tr
          each val in [1, 2, 3, 4, 5]
            tr
              td Some Data 
              td Some Data 
              td Link
    div#modal
      div#modal-content
        span#close-modal
          i.bi.bi-x-lg 
        p information on how to use the point cloud viewer
    script(src="js/main.js")
    script(src="js/upload.js")